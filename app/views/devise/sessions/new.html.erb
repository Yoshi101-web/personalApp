<div class="signs">
  <div class="sign">
    <div class="container">
      <h2>Log in</h2>

      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.label :remember_me %><br />
            <%= f.check_box :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "sign-btn" %>
        </div>
      <% end %>
      <%= link_to "sign up", "/users/sign_up", class: "change-sign" %>
    </div>
  </div>
</div>